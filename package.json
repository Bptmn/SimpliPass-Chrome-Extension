{
  "name": "simplipass-chrome-extension",
  "version": "1.0.0",
  "description": "SimpliPass Chrome Extension",
  "main": "background/background.js",
  "scripts": {
    "dev": "webpack --watch --mode=development",
    "build": "webpack --mode=production",
    "dev:popup": "vite",
    "build:popup": "vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deps:check": "npm-check-updates",
    "deps:update-minor": "npm-check-updates --target minor --upgrade",
    "deps:update-patch": "npm-check-updates --target patch --upgrade",
    "ci:validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@stablelib/chacha20poly1305": "^2.0.1",
    "@stablelib/random": "^2.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "amazon-cognito-identity-js": "^6.0.0",
    "aws-amplify": "^6.15.1",
    "firebase": "^10.8.0",
    "glob": "^11.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "react-window": "^1.8.11",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.326",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react-window": "^1.8.8",
    "@types/zxcvbn": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.8.1",
    "dotenv": "^16.5.0",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^16.14.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "moduleNameMapper": {
      "^shared/(.*)$": "<rootDir>/src/shared/$1",
      "^features/(.*)$": "<rootDir>/src/features/$1",
      "^services/(.*)$": "<rootDir>/src/services/$1",
      "^app/(.*)$": "<rootDir>/src/app/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.module\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
