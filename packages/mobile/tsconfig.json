{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../app/*"],
      "@shared/*": ["../shared/*"],
      "@extension/*": ["../extension/*"],
      "@design/*": ["../app/design/*"],
      "@components/*": ["../app/components/*"],
      "@screens/*": ["../app/screens/*"],
      "@hooks/*": ["../app/hooks/*"],
      "@logic/*": ["../app/logic/*"],
      "@utils/*": ["../app/utils/*"],
      "@ui/*": ["../common/ui/*"],
      "@common/*": ["../common/*"]
    },
    "types": ["react-native", "jest"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
} 